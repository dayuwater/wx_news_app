/* pages/detail/detail.wxss */

.page{
  margin: 30rpx;
}

.title-container{
  padding-top: 30rpx;
  
}

.title{
  font-size: 50rpx;
  line-height: 70rpx;
  opacity: 0.7;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.info{
  display: flex;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  margin-bottom: 90rpx;
}

.info .left{
  flex-grow: 1;
}

.source{
  margin-right: 30rpx;
}

.news{
  opacity: 0.7;
  font-size: 35rpx;
  line-height: 49rpx;
  margin-bottom: 50rpx;
}

image{
  margin-bottom: 50rpx;
  width: 100%;
  height: 400rpx;
}

.paragraph{
  margin-bottom: 50rpx;
}

.strong{
  font-weight: bold;
  font-size: 50rpx;
  line-height: 70rpx;
}

/* 其他服务器端段落类型，如果出现背景会变红，以便以后更新代码 */
.exception{
  background-color: red;
}

.info-box{
  margin: 130rpx;
  background-color: rgba(255,0,0,0.1);
  box-shadow: 10rpx 10rpx 5rpx #888888;
  border-radius: 40rpx;
  padding-bottom: 100rpx;

}

.info-box .icon{
  width: 100%;
  max-height: 200rpx;
  margin-bottom: 100rpx;
  margin-top: 100rpx;

}

.info-box .description{
  margin: 30rpx;
}